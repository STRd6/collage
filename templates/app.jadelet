- Tool = require "../presenters/tool"
- editor = this

app
  tools
    - @tools.forEach (tool) ->
      = Tool tool, editor
  workspace(@drop @dragover @mousedown @mousemove)
    render-area
    scene
    = @screenElement
  tray
    materials(@dragstart)
      = @images
    actions
      button(click=@options) Options
      button(click=@render) Render
