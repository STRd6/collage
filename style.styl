*
  box-sizing: border-box

body, html
  height: 100%

body
  margin: 0

app
  background-color: pink
  display: flex
  height: 100%

  & > tools, & > materials, & > workspace
    display: block
    flex-grow: 0

  & > workspace
    background-color: powderblue
    flex-grow: 1
    height: 100%
    position: relative
    overflow: hidden

    & > img
      position: absolute

    & > screen
      display: block
      width: 100%
      height: 100%
      position: absolute

  & > tools
    background-color: olive
    width: 100px

  & > materials
    background-color: yellow
    width: 200px

    & > img
      max-width: 64px
      height: auto
