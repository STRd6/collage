*
  box-sizing: border-box

body, html
  height: 100%

body
  font-family: "HelveticaNeue-Light", "Helvetica Neue Light", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif
  margin: 0

app
  display: flex
  height: 100%

  & > workspace
    background-color: #EEE
    display: block
    flex-grow: 1
    height: 100%
    position: relative
    overflow: hidden

    & > render-area
      background-color: white
      display: block
      position: absolute
      top: 0
      bottom: 0
      left: 0
      right: 0
      margin: auto
      width: 800px
      height: 450px

    & > scene
      display: block
      width: 100%
      height: 100%
      position: absolute
      transform-origin: 0 0

      & > img, & > canvas
        position: absolute
        transform-origin: 0 0

    & > canvas
      display: block
      width: 100%
      height: 100%
      position: absolute
      pointer-events: none

  & > tools
    background-color: #666
    flex-grow: 0
    & > tool
      background-color: #CCC
      background-position: center
      background-repeat: no-repeat
      background-size: cover
      display: block
      width: 48px
      height: 48px
      box-sizing: border-box
      border: 1px solid rgba(0, 0, 0, 0.5)
      border-top: 1px solid rgba(255, 255, 255, 0.5)
      border-left: 1px solid rgba(255, 255, 255, 0.5)
      cursor: pointer

      &.active
        background-color: #EEE

      &:last-child
        border-bottom-right-radius: 2px

  & > tray
    border-left: 1px solid #AAA
    display: flex
    flex-direction: column
    flex-grow: 0
    width: 146px
    height: 100%

    & > actions
      display: block

      & > button
        width: 100%

    & > materials
      background-color: #666
      display: block
      width: 100%
      height: 100%
      overflow: auto

      & > img
        max-width: 64px
        height: auto

#modal
  background-color: rgba(0, 0, 0, 0.25)
  display: none
  position: absolute
  z-index: 9000
  top: 0

  input[type=file]
    box-sizing: border-box
    padding: 5em 2em
    width: 320px
    height: 180px

  & > *
    background-color: white
    border: 1px solid black
    margin: auto
    position: absolute
    top: 0
    bottom: 0
    left: 0
    right: 0

  &.active
    display: block
    width: 100%
    height: 100%

#options
  & > h1
    font-size: 24px
    margin: 0 0 0.5em

  & > label
    display: flex
    margin-bottom: 1em

    & > h2
      display: inline-block
      font-size: 18px
      margin: 0 1em 0
      width: 60px

  height: 80%
  margin: auto
  padding: 1em
  width: 80%
